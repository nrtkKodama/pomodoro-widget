{
    "$schema": "https://raw.githubusercontent.com/tauri-apps/tauri/dev/crates/tauri-cli/schema.json",
    "productName": "Pomodoro Widget",
    "version": "0.1.0",
    "identifier": "com.pomodoro.app",
    "build": {
        "beforeDevCommand": "npm run dev",
        "devUrl": "http://localhost:1420",
        "beforeBuildCommand": "npm run build",
        "frontendDist": "../dist"
    },
    "app": {
        "windows": [
            {
                "label": "main",
                "title": "Pomodoro Widget",
                "width": 320,
                "height": 520,
                "resizable": true,
                "minWidth": 240,
                "minHeight": 360,
                "decorations": false,
                "transparent": true,
                "alwaysOnTop": true,
                "center": true
            }
        ],
        "security": {
            "csp": null
        }
    },
    "bundle": {
        "active": false,
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.ico",
            "icons/icon.png"
        ]
    }
}